<h1>Sign up!</h1>
<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li> <%= error %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= submit_tag "Submit" %>

<% end %>
