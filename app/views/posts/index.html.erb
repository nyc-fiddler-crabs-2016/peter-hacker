<div id="all-post-container">
  <% @posts.each_with_index do |post, index| %>
    <% if post.url %>
    <div class="post-container">
      <p><%= index+1 %>   <a href="<%=post.url%>"><%= post.title %></a>(<%=post.url%>)</p>
      <span> Created <%= post.post_time %> <a href="/posts/<%=post.id%>">comments</a>  By <%=post.owner.username %>
        <% if session[:user_id] %>
        <div>
        <form class="postvotes-form" method="post" action='/postvotes'>
            <input type="submit" value="Upvote!" class="button">
            <input type="hidden" name="post_id" value="<%="#{post.id}"%>">
        </div>
        <% end %>
        <% if session[:user_id] == post.owner_id %>
          <form method="get" action='/posts/<%="#{post.id}"%>/edit'>
            <input type="submit" value="Edit Post!" class="button">
          </form>
          <form method="post" action='/posts/<%="#{post.id}"%>'>
            <input type="hidden" name="_method" value ="delete">
            <input type="submit" value="Delete post" class="button">
          </form>
        <% end %>
          </span>
    </div>
    <% else %>
    <div class="post-container">
      <p><%= index+1 %>   <a href="/posts/<%=post.id%>"><%= post.title %></a></p>
      <span> Created <%= post.post_time %> <a href="/posts/<%=post.id%>">comments</a>  By <%=post.owner.username %>
        <% if session[:user_id] == post.owner_id %>
          <form method="get" action='/posts/<%="#{post.id}"%>/edit'>
            <input type="submit" value="Edit!" class="button">
          </form>
          <form method = "post" action='/posts/<%="#{post.id}"%>'>
            <input type="hidden" name="_method" value ="delete">
            <input type="submit" value="Delete post" class="button">
          </form>
        <% end %>
          </span>
      </span>
    </div>
    <% end %>
  <% end %>
</div>
