<!DOCTYPE html>
<html>
<head>
  <title>HackerNewsClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class = "nav-bar">
  <% if logged_in? %>
      <ul>
        <li><%= link_to 'Home', :posts %></li>
        <li><%= link_to current_user.username, current_user %></li>
        <li><%= link_to 'Logout', new_session_path, method: :delete %></li>
      </ul>
   <% else %>
       <ul>
        <li><%= link_to 'Home', :posts %></li>
          <li> <%= link_to 'Login', new_session_path %></li>
          <li> <%= link_to 'Signup', new_user_path %></li>
        </ul>

   <% end %>
</nav>

<%= yield %>

</body>
</html>
